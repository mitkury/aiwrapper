{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno: Debug Current File",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--allow-read",
        "--allow-env",
        "--allow-net",
        "--inspect-brk",
        "${file}"
      ],
      "attachSimplePort": 9229,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "../../dist/*": "${workspaceFolder}/src/*"
      }
    }
  ]
}